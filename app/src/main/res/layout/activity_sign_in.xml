<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignInActivity">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".SignInActivity"
    android:orientation="vertical">

    <!-- Sezione per l'immagine del profilo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/button_select_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_profile_image"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/cadetblue"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/errore_profile_immage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/red"
        android:layout_marginLeft="120dp"
        android:textSize="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/nome" />

        <EditText
            android:id="@+id/name_signin_field"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:hint="@string/nome"
            android:inputType="text"
            android:textSize="20dp" />

    </LinearLayout>
    <TextView
        android:id="@+id/errore_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/red"
        android:layout_marginLeft="120dp"
        android:textSize="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/nome" />

        <EditText
            android:id="@+id/surname_signin_field"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:hint="@string/cognome"
            android:inputType="text"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/errore_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/red"
        android:layout_marginLeft="120dp"
        android:textSize="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/valigia" />

        <Spinner
            android:id="@+id/role_signin_field"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:entries="@array/role"
            android:spinnerMode="dropdown"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/errore_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/red"
        android:layout_marginLeft="120dp"
        android:textSize="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/mail" />

        <EditText
            android:id="@+id/email_signin_field"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:textSize="20dp" />

    </LinearLayout>
    <TextView
        android:id="@+id/errore_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/red"
        android:textSize="10dp"
        android:layout_marginLeft="120dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/password"
            android:layout_marginLeft="50dp"/>

        <EditText
            android:id="@+id/password_signin_field"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textSize="20dp" />

    </LinearLayout>
    <TextView
        android:id="@+id/errore_pw1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/red"
        android:textSize="10dp"
        android:layout_marginLeft="120dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/password"
            android:layout_marginLeft="50dp"/>

        <EditText
            android:id="@+id/password_conf_signin_field"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:textSize="20dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/errore_pw2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/red"
        android:textSize="10dp"
        android:layout_marginLeft="120dp"/>
    <Button
        android:id="@+id/button_signin_signup"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/cadetblue"
        android:textColor="@color/white"
        android:text="Sign up" />

</LinearLayout>
</ScrollView>